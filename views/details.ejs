<% var object = JSON.parse(response) %>
	<% var result = object.aquabrowser %>
		<% var boekid = result.id.nativeid %>

		<!DOCTYPE html>
		<html>

		<head>
			<% include ../partials/head %>
				<title>Boek:
					<%= result.titles['short-title'].$t %>
				</title>
		</head>

		<body>
			<% include ../partials/hero %>
				<div class="container">
					<div class="columns">
						<div class="column is-one-quarter">
							<div class="box">
								<figure class="image is-2by3">
									<% var image = result.coverimages.coverimage[result.coverimages.coverimage.length-1].$t %>
										<img src="<%= image %>" alt="Boek">
								</figure>
							</div>
						</div>
						<div class="column">
							<div class="box">
								<div class="content">
									<h1>
										<%= result.titles['short-title'].$t %>
										<%= '//' %>
										<%= boekid %>
									</h1>
									<h5>
										<%= result.summaries.summary.$t %>
									</h5>
								</div>
							</div>
						</div>
						<div class="column is-one-quarter">
							<div class="box">
								<a href="/action/addToReadlist?id=<%= result.id.nativeid %>" class="button is-primary">Ik wil hem lezen!</a>
								<hr>
							</div>
						</div>
					</div>
				</div>
				</div>
		</body>

		</html>