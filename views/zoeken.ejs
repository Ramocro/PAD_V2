<% var object = JSON.parse(response) %>
<% var zoekdata = object.aquabrowser.results.result %>

<!DOCTYPE html>
<html>
<head>
	<% include ../partials/head %>
	<title>Zoeken</title>
</head>
<body>
	<% include ../partials/hero %>
	<div class="container">
		<div class="columns">
			<div class="column is-one-quarter">
				<div class="box">
					<div class="content">
						<h1 class="has-text-centered">Filteren</h1>
					</div>
					<hr>
					<div class="content">
						<div class="select">
							<select id="levelSelector" onchange="refresh()">
								<option>A</option>
								<option>AJ</option>
								<option>AK</option>
								<option>AP</option>
								<option>B</option>
								<option>C</option>
								<option>E-E3</option>
								<option>E-E4</option>
								<option>E-M</option>
								<option>E-S</option>
								<option>J</option>
							</select>
							<select>
								<option>Laden...</option>
							</select>
						</div>
					</div>
				</div>
			</div>
			<div class="column">
				<% zoekdata.forEach(function(result) { %>
				<div class="box">
					<a href="/details?id=<%= result.id.nativeid %>">
						<article class="media">
							<div class="media-left">
								<figure class="image is-2by3">
									<% var image = result.coverimages.coverimage[result.coverimages.coverimage.length-1].$t %>
									<img src="<%= image %>" alt="Boek">
								</figure>
							</div>
							<div class="media-content">
								<div class="content">
									<p>
										<strong><%= result.titles['short-title'].$t %></strong>
										<br>
										<% try{ %>
										<%= result.authors['main-author'].$t %>
										<% }catch(e){ %>
										<%= "Onbekend" %>
										<% } %>
										<br>
										<a>
											<% try{ %>
											<%= result['librarian-info'].record.marc.df059.df059.$t %>
											<% }catch(e){ %>
											<%= "Joden" %>
											<% } %>
								    </a>
									</p>
								</div>
							</div>
						</article>
					</a>
				</div>
				<% }); %>
			</div>
		</div>
	</div>
</body>
<script>
let params = (new URL(document.location)).searchParams;
var levelSelector = document.getElementById("levelSelector");
function refresh() {
	window.location = "zoeken?q=" + params.get("q") + "&level=" + levelSelector.value
}
</script>
</html>
